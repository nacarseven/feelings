<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/linearTweets"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearFollowing"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">

        <TextView
                android:text="@string/tweets_title"
                android:padding="8dp"
                android:gravity="center"
                style="@style/Text.12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtQtTwwets"
                android:textColor="@color/black"
                style="@style/Text.14sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:padding="8dp"
                tools:text="108k"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearFollowing"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/linearTweets"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearFollowers"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="@string/following_title"
                android:padding="8dp"
                android:gravity="center"
                style="@style/Text.12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtQtFollowing"
                android:textColor="@color/black"
                style="@style/Text.14sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:padding="8dp"
                tools:text="108k"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearFollowers"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/linearFollowing"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLikes"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="@string/followers_title"
                android:padding="8dp"
                android:gravity="center"
                style="@style/Text.12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtQtFollowers"
                android:textColor="@color/black"
                style="@style/Text.14sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:padding="8dp"
                tools:text="108k"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/linearLikes"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/linearFollowers"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:text="@string/likes_title"
                android:padding="8dp"
                android:gravity="center"
                style="@style/Text.12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/txtQtLikes"
                android:textColor="@color/black"
                style="@style/Text.14sp"
                android:textStyle="bold"
                android:background="@color/gray"
                android:padding="8dp"
                tools:text="108k"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>