<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView android:layout_width="80dp"
                                                  app:civ_border_width="2dp"
                                                  app:civ_border_color="#FF000000"
                                                  tools:src="@drawable/ic_not_found"
                                                  android:src="@drawable/ic_not_found"
                                                  android:layout_height="80dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginTop="16dp" android:layout_marginStart="16dp"
                                                  android:id="@+id/civUserProfile"/>

    <TextView
            android:id="@+id/txtUserName"
            style="@style/Text.16sp"
            android:layout_width="0dp"
            tools:text="Profile's Name"
            android:layout_height="wrap_content" app:layout_constraintStart_toEndOf="@+id/civUserProfile"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"/>

    <TextView
            android:id="@+id/txtScreenName"
            style="@style/Text.12sp"
            android:layout_width="0dp"
            tools:text="Scrren Name"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txtUserName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/civUserProfile"
            android:layout_marginStart="16dp"/>

    <TextView
            android:maxLines="3"
            style="@style/Text.14sp"
            android:ellipsize="end"
            android:gravity="start"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book"
            android:id="@+id/txtDescriptionProfile"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtScreenName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/civUserProfile" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>


</android.support.constraint.ConstraintLayout>